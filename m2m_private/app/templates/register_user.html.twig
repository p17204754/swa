{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h2>{{ page_heading_2 }}</h2>
        <form action="{{ action }}" method="{{ method }}">
            <fieldset>
                <legend>{{ page_title }}</legend>
                <label for="username">"username:"</label>
                <input id="username" type="text" name="username" value="" size="10" maxlength="50" placeholder="username">
                <br><br>
                <label for="email">"email:"</label>
                <input id="email" type="email" name="email" value="" size="10" maxlength="50" placeholder="username@gmail.com">
                <br><br>
                <label for="password">"password:"</label>
                <input id="password" type="password" name="password" value="" size="10" maxlength="50" placeholder="password">
                <br><br>
                <input type="submit" value="Register"/>
            </fieldset>
        </form>
    <div id = "link">
        <p class="curr_page"><a href="{{ landing_page }}">Home</a></p>
    </div>
    </div>
{% endblock %}