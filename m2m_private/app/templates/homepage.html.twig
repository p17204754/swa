{% extends 'banner.html.twig' %}
{% block content %}
    <div id="page-content-div">
        <h2>{{ page_heading_2 }}</h2>
        {% if logInValue == false %}
        <form action="{{ logInAction }}" method="{{ method }}">
            <fieldset>
                <legend>{{ page_title }}</legend>
                <label for="username">"username:"</label>
                <input id="username" type="text" name="username" value="" size="10" maxlength="50" placeholder="username">
                <br><br>
                <label for="password">"password:"</label>
                <input id="password" type="password" name="password" value="" size="10" maxlength="50" placeholder="0">
                <br><br>
                <input type="submit" value="Log in"/>
            </fieldset>
        </form>
        {% endif %}
        <div id = "link">
        <p class="curr_page"><a href="{{ regAction }}">Register</a></p>
        </div>
        {% if logInValue == true %}
        <form action ='{{ action2 }}' method="{{ method2 }}">
            <input type="submit" value="{{ actionButtonText2 }}"/>
        </form>
        {% endif %}
        <div id = "link">
        <p class="curr_page"><a href="{{ landing_page }}">Home</a></p>
        </div>
    </div>
{% endblock %}
